// This is your Prisma schema file
// Prisma 7 format

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth 모델
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 팀원 (SDR)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  prospects Prospect[]
}

// Prospect (관리 대상)
model Prospect {
  id             String   @id @default(cuid())
  name           String
  email          String?
  phone          String?
  phase          Int      @default(1) // 1-5
  intimacyScore  Int      @default(0) // 0-10
  readinessScore Int      @default(0) // 0-10
  status         String   @default("active") // active, converted, dropped
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]
  insights      Insight[]
}

// 대화 기록
model Conversation {
  id         String   @id @default(cuid())
  message    String
  sender     String // "sdr" or "prospect"
  aiAdvice   String?
  createdAt  DateTime @default(now())
  prospectId String
  prospect   Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)
}

// AI 인사이트
model Insight {
  id         String   @id @default(cuid())
  type       String // core_belief, wound, pattern, readiness_signal
  content    String
  createdAt  DateTime @default(now())
  prospectId String
  prospect   Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)
}
