// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth 모델
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 팀원 모델 (NextAuth User 확장)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  prospects Prospect[]
}

// Prospect 모델
model Prospect {
  id             String   @id @default(cuid())
  ownerId        String
  name           String
  contact        String?
  phase          Int      @default(1) // 1-5
  intimacyScore  Int      @default(0) // 0-10
  readinessScore Int      @default(0) // 0-10
  status         String   @default("active") // active, paused, converted, lost
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  owner         User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  insights      Insight[]
  conversations Conversation[]

  @@index([ownerId])
}

// 인사이트 모델
model Insight {
  id         String   @id @default(cuid())
  prospectId String
  type       String // core_belief, wound, pattern, readiness_signal
  content    String   @db.Text
  createdAt  DateTime @default(now())

  prospect Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)

  @@index([prospectId])
}

// 대화 히스토리 모델
model Conversation {
  id         String   @id @default(cuid())
  prospectId String
  message    String   @db.Text
  sender     String // sdr, prospect
  aiAdvice   String?  @db.Text
  createdAt  DateTime @default(now())

  prospect Prospect @relation(fields: [prospectId], references: [id], onDelete: Cascade)

  @@index([prospectId])
  @@index([createdAt])
}
